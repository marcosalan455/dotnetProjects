@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center bg-dark">

    <h1 class="display-4" style="color: whitesmoke;">Editar contato</h1>

</div>

<form>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome">
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o Email">
    </div>

    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>